@page
@model ApplicationVersionTracking.Pages.Applications.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Application.ID" />
            <div class="form-group">
                <label asp-for="Application.Name" class="control-label"></label>
                <input asp-for="Application.Name" class="form-control" />
                <span asp-validation-for="Application.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application.DisplayName" class="control-label"></label>
                <input asp-for="Application.DisplayName" class="form-control" />
                <span asp-validation-for="Application.DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application.ProjectID" class="control-label"></label>
                <select asp-for="Application.ProjectID" class="form-control" asp-items="ViewBag.ProjectID"></select>
                <span asp-validation-for="Application.ProjectID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application.StatusTypeID" class="control-label"></label>
                <select asp-for="Application.StatusTypeID" class="form-control" asp-items="ViewBag.StatusTypeID"></select>
                <span asp-validation-for="Application.StatusTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application.ActiveTFRelease" class="control-label"></label>
                <input asp-for="Application.ActiveTFRelease" class="form-control" />
                <span asp-validation-for="Application.ActiveTFRelease" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
