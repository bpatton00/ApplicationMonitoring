@page
@model ApplicationVersionTracking.Pages.Applications.IndexModel

@{
    ViewData["Title"] = "Applications";
}

<h2>Applications</h2>

<p>
    <a asp-page="Create" class="btn btn-success btn-sm">Create New</a>
</p>
<form class="float-md-right">
    <div class="form-inline">
        <div class="form-group mb-2">
            <label for="applicationName" class="col-form-label">Application Name:</label>&nbsp;
            <input type="text" name="applicationName" class="form-control-sm">
        </div>
        <div class="form-group mb-2 mx-sm-3">

            <input type="submit" value="Filter" class="btn btn-secondary btn-sm" />
        </div>
    </div>   
</form>
<div class="table-responsive-md">
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Application[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Application[0].Project)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Application[0].ActiveTFRelease)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Application[0].StatusType)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Application)
            {
            <tr>
                <td>
                    <a href="~/Applications/Details?id=@Html.DisplayFor(modelItem => item.ID)" class="primaryname">@Html.DisplayFor(modelItem => item.Name)</a>
                    <br />
                    <small><i>@Html.DisplayFor(modelItem => item.DisplayName)</i></small>
                </td>
                <td>
                    <a href="~/Projects/Details?id=@item.Project.ID">@Html.DisplayFor(modelItem => item.Project.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActiveTFRelease)
                </td>

                <td>
                    <font class="@(item.StatusType.Description == "Active" ? "badge badge-success" : "badge badge-danger")">
                        @Html.DisplayFor(modelItem => item.StatusType.Description)
                    </font>

                </td>
                <td>
                    <div class="float-right">
                        <a asp-page="./Details" class="btn btn-outline-secondary btn-sm " asp-route-id="@item.ID"><i class="fas fa-info-circle"></i> Details</a>
                        &nbsp;&nbsp;
                        <a asp-page="./Edit" class="btn btn-outline-warning btn-sm " asp-route-id="@item.ID"><i class="fas fa-edit"></i> Edit</a>
                        <!--
            <a asp-page="./Delete" class="btn btn-danger btn-sm " asp-route-id="@item.ID">Delete</a>
            -->
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>