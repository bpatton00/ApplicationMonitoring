@page
@model ApplicationVersionTracking.Pages.Events.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Event.EventTypeID" class="control-label"></label>
                <select asp-for="Event.EventTypeID" class="form-control" asp-items="ViewBag.EventTypeID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Event.ApplicationID" class="control-label"></label>
                <select asp-for="Event.ApplicationID" class="form-control" asp-items="ViewBag.ApplicationID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Event.ServerID" class="control-label"></label>
                <select asp-for="Event.ServerID" class="form-control" asp-items="ViewBag.ServerID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Event.msiFile" class="control-label"></label>
                <input asp-for="Event.msiFile" class="form-control" />
                <span asp-validation-for="Event.msiFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Version" class="control-label"></label>
                <input asp-for="Event.Version" class="form-control" />
                <span asp-validation-for="Event.Version" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EnvironmentTypeID" class="control-label"></label>
                <select asp-for="Event.EnvironmentTypeID" class="form-control" asp-items="ViewBag.EnvironmentTypeID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Event.EventDate" class="control-label"></label>
                <input asp-for="Event.EventDate" class="form-control" />
                <span asp-validation-for="Event.EventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Installer" class="control-label"></label>
                <input asp-for="Event.Installer" class="form-control" />
                <span asp-validation-for="Event.Installer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
    $(document).ready(function () {
        $('#Event_Installer').autocomplete({
            source: function (req, resp) {
                $.getJSON("../api/Event/getInstallers/" + encodeURIComponent(req.term), resp);
            }           
        });

        $('#Event_msiFile').autocomplete({
            source: function (req, resp) {
                $.getJSON("../api/Event/getMSIs/" + encodeURIComponent(req.term), resp);
            }
        });
    });
    </script>
}
