@page
@model ApplicationVersionTracking.Pages.Servers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Server</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Server.Name" class="control-label"></label>
                <input asp-for="Server.Name" class="form-control" />
                <span asp-validation-for="Server.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Server.StatusTypeID" class="control-label"></label>
                <select asp-for="Server.StatusTypeID" class="form-control" asp-items="ViewBag.StatusTypeID"></select>
                <span asp-validation-for="Server.StatusTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
    $(document).ready(function () {
        $('#Server_Name').autocomplete({
            source: function (req, resp) {
                $.getJSON("../api/Server/getServerList/" + encodeURIComponent(req.term), resp);
            }
        });
    });
    </script>
}
