@model IEnumerable<ApplicationVersionTracking.Models.Application>

@foreach (var app in Model)
{
    <b>@app.Name</b>
    <div class="row">
        <div class="col-lg-4">
            <div class="card border-warning">
                <div class="card-header">Dev</div>
                <div class="card-body">
                    @await Component.InvokeAsync("EventList", new { applicationID = app.ID, EnvironmentID = 1 })
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card border-info">
                <div class="card-header">Test</div>
                <div class="card-body">
                    @await Component.InvokeAsync("EventList", new { applicationID = app.ID, EnvironmentID = 2 })
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card border-success">
                <div class="card-header">Prod</div>
                <div class="card-body">
                    @await Component.InvokeAsync("EventList", new { applicationID = app.ID, EnvironmentID = 3 })
                </div>
            </div>
        </div>
    </div>
}